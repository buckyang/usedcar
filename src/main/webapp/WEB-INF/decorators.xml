<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/WEB-INF/decorators">
	<excludes>	
		<pattern>*/ajax/*</pattern>
		<pattern>*/includes/*</pattern>
		<pattern>*/js/*</pattern>
		<pattern>*/css/*</pattern>
		<pattern>*/image/*</pattern>
	</excludes>

	<decorator name="login" page="loginDecorator.jsp">
		<pattern>*login.jsp</pattern>
	</decorator>


    <decorator name="secure" page="secure.jsp">
        <pattern>*/secure/*.jsp</pattern>
    </decorator>

	<decorator name="main" page="main.jsp">
		<pattern>*.jsp</pattern>
	</decorator>

</decorators>